{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "LD_LIBRARY_PATH=/nix/store/$(ls /nix/store | grep -m1 'gcc.*lib$')/lib:$LD_LIBRARY_PATH /opt/venv/bin/gunicorn -w 4 --bind 0.0.0.0:$PORT app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}